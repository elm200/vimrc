set nocompatible
filetype off

" 256色表示
set t_Co=256
" Vim の内部エンコーディング
set encoding=utf-8
" この .rvmrc ファイルのエンコーディング
set fileencoding=utf-8
" 読み込むファイルのエンコーディングの試し順
set fileencodings=utf-8,cp932,eucjp-ms,iso-2022-jp-3,ucs-bom,latin1

set tabstop=2
set shiftwidth=2
set expandtab
set softtabstop=2
set autoindent
set number
set nolist
set noswapfile
set history=1000
set ambiwidth=double

"Make ESC faster
set timeout timeoutlen=1000 ttimeoutlen=75
